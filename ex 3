#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    pid_t child_pid;

    child_pid = fork();

    if (child_pid < 0) {
        perror("Fork failed");
        return 1;
    }
    else if (child_pid == 0) {
        // Child
        printf("Child process: PID=%d\n", getpid());

        execl("/bin/ls", "ls", "-l", NULL);

        perror("execl failed");
        return 1;
    }
    else {
        // Parent
        printf("Parent process: PID=%d\n", getpid());
        wait(NULL);
        printf("Child process finished.\n");
    }

    return 0;
}
